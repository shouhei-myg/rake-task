<h1>ユーザー登録</h1>

<%= form_with model: @user, url: users_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <strong><%= @user.errors.count %>個のエラーがあります。</strong>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.label :name%>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :性別 %>
  <%= form.select :sex, ['男', '女'], {include_blank: '選択ボックス'}, class: 'sex' %>

  <%= form.label :年齢 %>
  <%= form.text_field :age %>

  <%= form.submit '登録' %>
<% end %>